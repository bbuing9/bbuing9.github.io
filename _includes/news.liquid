<div class="news">
  {% if site.news != blank %}
    {% assign news = site.news | reverse %}
    {% assign news_size = news | size %}

    {% if include.limit %}
      {% assign news_limit = include.limit | plus: 0 %}
    {% else %}
      {% assign news_limit = news_size %}
    {% endif %}

    <div
      class="table-responsive"
      {% if include.limit and include.scrollable and news_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% for item in news limit: news_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}

        {% if include.more_news_text and include.more_news_url %}
          {% if news_size > news_limit %}
            <tr>
              <th scope="row" style="width: 20%"></th>
              <td>
                <a class="news-more-news-link" href="{{ include.more_news_url | relative_url }}">{{ include.more_news_text }}</a>
              </td>
            </tr>
          {% endif %}
        {% endif %}
      </table>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
